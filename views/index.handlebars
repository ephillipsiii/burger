{{! will have html to render template from /layouts/main.handlebars}}
{{!Will have button for submittig user input into database}}

<div class="container">
    <section id="page-name">
          <iframe src="https://giphy.com/embed/3otPoz2V9lPlSH9pde" width="480" height="204" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/quentin-tarantino-pulp-fiction-samuel-l-jackson-3otPoz2V9lPlSH9pde">via GIPHY</a></p>
            <h1>Eat-Da-Buger</h1>
    </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What burger would you like?"></textarea>
        </div>
        <button type="submit">Add Burger</button>
    </form>     
</div>